    <body>
      <!-- Google Tag Manager (noscript) -->
      <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NMPJHST"
      height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
      <!-- End Google Tag Manager (noscript) -->
        <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <!-- Add your site or application content here -->
		<!-- header start -->

		<!-- header end -->
		<div class="slider ptb-150">
			<div class="container">
				<div class="slider-info-text text-center">
					<div class="info-inner">
						<h1><%= @artist.title %></h1>
						<span><%= @artist.subtitle %></span>
					</div>
				</div>
			</div>
		</div>
		<!-- portfolio start -->
		<%= yield %>
		<!-- portfolio end -->
		<!-- service-area end -->
		<footer class="footer-bg bg-opacity footer-border b ptb-90">
			<div class="footer-area">
				<div class="container">
					<div class="footer-info text-center">
						<div class="logo footer-logo">
							<a href="#"><%= @artist.title %></a>
						</div>
						<ul>
							<li>Phone : <%= @artist.phone %></li>
							<li>Email : <%= @artist.email %></li>
							<li>Address : <%= @artist.address %></li>
						</ul>
						<div class="social-icon mt-20">
							<a href="<%= @artist.facebook %>" target="_blank"><i class="fa fa-facebook"></i></a>
							<a href="<%= @artist.instagram %>" target="_blank"><i class="fa fa-instagram"></i></a>
							<a href="<%= @artist.pinterest %>" target="_blank"><i class="fa fa-pinterest"></i></a>
						</div>
					</div>
				</div>
			</div>
		</footer>
        <!-- start scrollUp  -->
        <div id="toTop">
            <i class="fa fa-chevron-up"></i>
        </div>


		<!-- all js here -->
        <%= javascript_include_tag 'bootstrap.min','isotope.pkgd.min','owl.carousel.min', 'imagesloaded.pkgd.min','jquery.meanmenu','ajax-mail','plugins','main'%>
        <script type="text/javascript">
            // grab an element
            var myElement = document.querySelector(".intelligent-header");
            // construct an instance of Headroom, passing the element
            var headroom  = new Headroom(myElement);
            // initialise
            headroom.init();
        </script>
    </body>
</html>
