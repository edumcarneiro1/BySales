<html class="no-js" lang="zxx">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>By Sales || Person who creates art.</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Favicon -->
        <link rel="shortcut icon" type="image/x-icon" href="img/favicon.png">

		      <!-- all css here -->
        <%= stylesheet_link_tag 'bootstrap.min','font-awesome.min','et-line-fonts','animate','owl.carousel','magnific-popup','meanmenu','shortcode/shortcodes','style','responsive' %>

        <%= javascript_include_tag 'vendor/jquery-1.12.0.min','vendor/modernizr-2.8.3.min'%>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.4.0/react-with-addons.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.4.0/react-dom.js"></script>
